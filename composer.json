{
	"name": "vasek-purchart/phing-tester",
	"description": "Helper tool for writing Phing component tests using PHPUnit",
	"keywords": ["phing", "test", "phpunit"],
	"license": "MIT",
	"authors": [
		{
			"name": "Va≈°ek Purchart",
			"email": "me@vasekpurchart.cz",
			"homepage": "http://vasekpurchart.cz"
		}
	],
	"require": {
		"php": "~7.2",
		"phing/phing": "~2.16",
		"phpunit/phpunit": "^7.0.3"
	},
	"require-dev": {
		"consistence/coding-standard": "3.10.1",
		"php-parallel-lint/php-console-highlighter": "1.0",
		"php-parallel-lint/php-parallel-lint": "1.3.2"
	},
	"autoload": {
		"psr-4": {
			"VasekPurchart\\Phing\\PhingTester\\": [
				"src"
			]
		},
		"classmap": [
			"src"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"VasekPurchart\\Phing\\PhingTester\\": [
				"tests"
			]
		},
		"classmap": [
			"tests"
		]
	},
	"config": {
		"bin-dir": "bin",
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": false
		}
	}
}
